<UserControl x:Class="servidor.Views.Carrusel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:servidor.Views"
             mc:Ignorable="d" 
                    d:DesignHeight="450" d:DesignWidth="800">
    <DockPanel Margin="10">
        <TextBlock FontWeight="DemiBold" DockPanel.Dock="Top" TextAlignment="Center" FontSize="30">Galería</TextBlock>
        <ListBox  Background="#C4DFDF" ItemsSource="{Binding Fotos}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Image Source="{Binding fotobitmap}" Width="200" Height="200"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </DockPanel>
</UserControl>
